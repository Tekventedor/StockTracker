{
  "name": "stock-tracker",
  "version": "1.0.0",
  "description": "Stock market tracking and learning platform",
  "scripts": {
    "build": "npm run build:css && hugo --gc --minify",
    "build:css": "npm run build:css:v3 && npm run build:css:v4",
    "build:css:v3": "tailwindcss -c tailwind.v3.config.js -o static/css/v3.css --minify",
    "build:css:v4": "tailwindcss -c tailwind.v4.config.js -o static/css/v4.css --minify"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@tailwindcss/forms": "^0.5.7",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
